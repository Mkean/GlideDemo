<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.glidedemo.activity.DownloadActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/downloadSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="downloadSize" />

        <Button
            android:id="@+id/downloadTarget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="downloadTarget" />
    </LinearLayout>

    <TextView
        android:id="@+id/downloadSize_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="12"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/downloadSize_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/downloadTarget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="13"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/downloadTarget_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp" />

</LinearLayout>
